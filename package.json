{
    "name": "next-with-ts",
    "version": "0.1.0",
    "description": "next.js with typescript boiler plate",
    "repository": {
        "type": "git",
        "url": "git@github.com:uruha/next-with-ts.git"
    },
    "scripts": {
        "dev": "nodemon",
        "build": "next build && tsc --project tsconfig.server.json",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "type:check": "tsc",
        "lint:check": "eslint . --ext .ts,.tsx",
        "lint:fmt": "eslint . --fix --ext .ts,.tsx",
        "format": "prettier '{pages,server,src}/**/*.{js,ts,tsx}' --write",
        "test": "jest",
        "gen": "hygen generate"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint . --ext .ts,.tsx --fix"
        ]
    },
    "keywords": [
        "next.js",
        "typescript"
    ],
    "author": "Kotaro Chiba",
    "license": "MIT",
    "dependencies": {
        "@koa/router": "^10.0.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "bunyan": "^1.8.14",
        "cross-env": "^7.0.2",
        "jwt-decode": "^3.0.0",
        "koa": "^2.13.0",
        "koa-helmet": "^6.0.0",
        "module-alias": "^2.2.2",
        "next": "^11.1.3",
        "next-redux-wrapper": "^6.0.2",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-redux": "^7.2.1",
        "redux": "^4.0.5",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.1.3",
        "universal-cookie": "^4.0.4"
    },
    "devDependencies": {
        "@testing-library/react": "^11.1.0",
        "@testing-library/react-hooks": "^5.1.1",
        "@types/bunyan": "^1.8.6",
        "@types/enzyme": "^3.10.7",
        "@types/jest": "^26.0.15",
        "@types/jwt-decode": "^3.1.0",
        "@types/koa": "^2.11.6",
        "@types/koa__router": "^8.0.3",
        "@types/koa-helmet": "^6.0.1",
        "@types/koa-router": "^7.4.1",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@types/react-redux": "^7.1.9",
        "@types/redux-logger": "^3.0.8",
        "@types/universal-cookie": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "@typescript-eslint/typescript-estree": "^4.5.0",
        "babel-jest": "^26.6.0",
        "enzyme": "^3.11.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-react": "^7.21.5",
        "husky": "^4.3.0",
        "hygen": "^6.0.4",
        "jest": "^26.6.0",
        "jest-fetch-mock": "^3.0.3",
        "lint-staged": "^10.4.2",
        "nodemon": "^2.0.6",
        "prettier": "^2.1.2",
        "redux-saga-test-plan": "^4.0.1",
        "snapshot-diff": "^0.8.1",
        "ts-jest": "^26.4.1",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "_moduleAliases": {
        "~": "src",
        "~pages": "pages"
    }
}
